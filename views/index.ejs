<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap" rel="stylesheet">
    <title>S.O.S</title>
    <link rel="shortcut icon" href="./../sos.png" type="image/x-icon">
</head>
<body class="p-3 mb-2 bg-light text-dark" >

    <div class="container">
        <h2 class="display-6" id="totem" style="font-family: 'Nunito Sans', sans-serif;"><%= totem %></h2>
        <textarea id="text-message" class="form-control" aria-describedby="" rows="3" placeholder="Ingrese el mensaje"></textarea>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3 "> 
            <button id="send-message-sos" class="btn btn-primary border">Enviar Mensaje</button>
        </div>
        </div>
    </div>
    
    <script src="socket.io/socket.io.js"></script>
    <script>
        
        let btn = document.querySelector('#send-message-sos')
        let messageText = document.getElementById('text-message')
        let reqUrl = document.getElementById('totem')
        var socket = io();
        
        //cuando se conecta
        socket.on('connect', function(){
            console.log('Connected to the server :: myid=1>',socket.id)
            let regex = /(\d+)/g;
            idarrayTotem=(reqUrl.textContent.match(regex)[0])-1
            //envia el nombre del totem al servidor
            datos = {
                id:idarrayTotem,
                socket_id:socket.id,
                name:reqUrl.textContent,//pasar un alias
                stream:true,
                message:'Se inicio apertura de camara.'
            }
            // console.log(reqUrl.textContent.match(regex)[0])
            socket.emit('totem_register', datos)
        });
        //cuando se desconecta
        socket.on('disconnected', function(){
            console.log('Disconnected from the server ', socket.id)
           
        });

        socket.on('solved2', function(totem_name){
            if(reqUrl.textContent==totem_name){

                alert("resuelto");
            }
        });
        socket.on('connected', function(){
            // console.log('recibe el totem ',reqUrl.textContent);
            socket.emit('totem:response',reqUrl.textContent)
            // alert('a')
        });

        socket.on('register_ok', function(){
            let regex = /(\d+)/g;

            datos = {
                id:reqUrl.textContent.match(regex),
                name:reqUrl.textContent,//pasar un alias
                message:'Se inicio apertura de camara.'
            }
            console.log(datos)
            //cuando se conecta un totem -> emite a view/server.ejs
            socket.emit('sos:server',datos)
            messageText.focus()
        });

        btn.addEventListener('click', ()=>{
            console.log(messageText.value)
            payload = {
                name:reqUrl.textContent,
                message:messageText.value
            }

            
            socket.emit('message-from-client',payload)
        })
        
     

        
    </script>
</body>

</html>